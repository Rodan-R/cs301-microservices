generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  agent
}

model User {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  email        String   @unique
  role            Role     @default(agent) // mirror of Cognito group; useful for UI
  cognitoSub      String?  @unique
  deletedAt       DateTime?
  deletedReason   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
